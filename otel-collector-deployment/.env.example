# Environment configuration for OpenTelemetry Collector deployment
# Copy this to .env and modify values according to your environment

# Node.js Application Endpoints
NODE_APP_HOST=10.0.0.100
NODE_APP_PORT=3000
NODE_APP_HOST_2=10.0.0.101
NODE_APP_PORT_2=3000

# Backend Service Endpoints
PROMETHEUS_ENDPOINT=http://10.0.0.200:9090
JAEGER_ENDPOINT=10.0.0.201:14250
OTLP_ENDPOINT=http://10.0.0.202:4317

# Deployment Configuration
DEPLOYMENT_ENV=production
COLLECTOR_INSTANCE=collector-01
DATACENTER=dc1
LOG_LEVEL=info

# Optional Authentication (uncomment and set if needed)
# PROMETHEUS_TOKEN=your_prometheus_bearer_token
# JAEGER_TOKEN=your_jaeger_auth_token

# Docker Compose Profiles
# Uncomment to enable local testing services
# COMPOSE_PROFILES=local-testing