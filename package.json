{
  "name": "@opentelemetry/nodejs-demo",
  "version": "2.0.0",
  "description": "Production-ready OpenTelemetry implementation for Node.js applications with pull-based metrics collection",
  "main": "src/app.js",
  "type": "commonjs",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "dev:debug": "NODE_ENV=development DEBUG=otel:* node src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/ tests/ --ext .js",
    "lint:fix": "eslint src/ tests/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\" \"*.{js,json,md}\"",
    "quality": "npm run lint && npm run format:check && npm run test:ci",
    "health": "curl -s http://localhost:3000/api/health | jq",
    "metrics": "curl -s http://localhost:3000/metrics",
    "otel:metrics": "curl -s http://localhost:9090/metrics",
    "docker:build": "docker build -t otel-nodejs-demo .",
    "docker:run": "docker run -p 3000:3000 -p 9090:9090 otel-nodejs-demo",
    "observability:up": "docker-compose -f config/observability/docker-compose.yml up -d",
    "observability:down": "docker-compose -f config/observability/docker-compose.yml down",
    "observability:logs": "docker-compose -f config/observability/docker-compose.yml logs -f",
    "observability:restart": "npm run observability:down && npm run observability:up",
    "setup": "npm install && npm run observability:up",
    "setup:dev": "npm install && npm run observability:up && npm run dev",
    "clean": "npm run observability:down && rm -rf node_modules package-lock.json coverage/",
    "clean:cache": "npm cache clean --force && rm -rf node_modules package-lock.json",
    "validate": "node scripts/validate-config.js",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "precommit": "lint-staged",
    "prepare": "husky install || true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/opentelemetry-nodejs-demo.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/opentelemetry-nodejs-demo/issues"
  },
  "homepage": "https://github.com/your-org/opentelemetry-nodejs-demo#readme",
  "keywords": [
    "opentelemetry",
    "observability",
    "monitoring",
    "tracing",
    "metrics",
    "nodejs",
    "express",
    "prometheus",
    "jaeger",
    "grafana",
    "distributed-tracing",
    "pull-based-collection",
    "telemetry",
    "apm",
    "microservices"
  ],
  "author": {
    "name": "Your Organization",
    "email": "contact@your-org.com",
    "url": "https://your-org.com"
  },
  "license": "MIT",
  "files": [
    "src/",
    "config/",
    "docs/",
    "examples/",
    "scripts/",
    "README.md",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/auto-instrumentations-node": "^0.39.4",
    "@opentelemetry/exporter-prometheus": "^0.205.0",
    "@opentelemetry/resources": "^1.17.0",
    "@opentelemetry/sdk-metrics": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "@opentelemetry/semantic-conventions": "^1.17.0",
    "express": "^4.18.2",
    "prom-client": "^15.1.3",
    "socket.io": "^4.7.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "dotenv": "^16.6.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "peerDependencies": {
    "node": ">=16.0.0"
  },
  "config": {
    "telemetry": {
      "defaultServiceName": "nodejs-otel-demo",
      "defaultMetricsPort": 9090,
      "defaultEnvironment": "development"
    }
  }
}