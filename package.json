{
  "name": "otel-demo",
  "version": "1.0.0",
  "description": "A well-organized Node.js Express application demonstrating OpenTelemetry tracing",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:env": "nodemon --exec \"node -r dotenv/config server.js\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "echo \"Add ESLint configuration for linting\"",
    "clean": "rimraf dist/",
    "check:health": "curl -s http://localhost:3000/health | json_pp",
    "check:detailed": "curl -s http://localhost:3000/health/detailed | json_pp"
  },
  "keywords": [
    "opentelemetry",
    "tracing",
    "nodejs",
    "express",
    "observability",
    "monitoring",
    "telemetry",
    "distributed-tracing"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/api-logs": "^0.45.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "@opentelemetry/auto-instrumentations-node": "^0.39.4",
    "@opentelemetry/resources": "^1.17.0",
    "@opentelemetry/semantic-conventions": "^1.17.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}