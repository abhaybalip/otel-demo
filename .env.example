# OpenTelemetry Node.js Example - Environment Configuration
# Copy this file to .env and customize for your environment

# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=nodejs-opentelemetry-app
OTEL_SERVICE_VERSION=1.0.0
OTEL_ENVIRONMENT=development

# Export Configuration
OTEL_EXPORTER_CONSOLE_ENABLED=true
OTEL_EXPORTER_OTLP_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Sampling Configuration (1.0 = 100%, 0.1 = 10%, etc.)
OTEL_SAMPLING_RATIO=1.0

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=pretty