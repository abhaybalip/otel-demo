# Environment configuration for Node.js application
# Copy this to .env in the main application directory

# OpenTelemetry Collector Configuration
# For local development (default)
OTEL_COLLECTOR_URL=http://localhost:4318/v1/traces

# For remote collector deployment
# OTEL_COLLECTOR_URL=http://10.0.0.150:4318/v1/traces

# Optional: Headers for authentication with remote collector
# OTEL_COLLECTOR_HEADERS={"Authorization": "Bearer your_token_here"}

# Application Configuration
PORT=3000
NODE_ENV=development

# Service Information (used by OpenTelemetry)
OTEL_SERVICE_NAME=node-otel-app
OTEL_SERVICE_VERSION=1.0.0